<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.emp.mapper.BoardMapper">

	<select id="selectBoard" resultType="com.dw.emp.VO.BoardVO">
		SELECT
		board_no,
		title,
		writer,
		DATE_FORMAT(create_at, "%Y-%m-%d") as create_at,
		board_count
		FROM board
	</select>

	<insert id="insertBoard">
		INSERT INTO board
		(title, contents, writer)
		VALUES
		(#{title},#{contents},#{writer})
	</insert>

	<select id="selectBoardFindByBoardNo"
		resultType="com.dw.emp.VO.BoardVO">
		SELECT title, contents, writer
		From board
		WHERE board_no = #{boardNo}

	</select>

	<update id="updateBoard">
		UPDATE board
		SET title = #{title}, contents = #{contents}
		WHERE writer = #{writer}
	</update>

	<delete id="deleteBoard">
		DELETE FROM board
		WHERE writer = #{writer}
	</delete>
</mapper>